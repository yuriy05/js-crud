<main>
  <section class="product__create">
    <h1 class="product__title">Створення товару</h1>
    <div class="form">
      <form method="post" action="/product-create">
        <div class="form__content">
          <h2 class="form__info">Інформація про товар</h2>
          <div class="form__tech">
          <div class="form__field--name">
            <label for="name" class="form__label">Назва товару: </label>
            <input type="name" name="name" class="form__input" placeholder="Введіть назву товару" required>
          </div>
          <div class="form__field--price">
            <label for="price" class="form__label">Ціна: </label>
            <input type="price" name="price" class="form__input" placeholder="Введіть ціну товару" required>
          </div>
          </div>
          <div class="form__description">
            <div class="form__field--description">
            <label for="description" class="form__label">Короткий опис до товару</label>
            <input type="description" name="description" class="form__input" placeholder="Додайте опис" required>
            <p class="form__additional-info">Відображається у картці товару</p>
          </div>
          </div>
          <button class="form__button">Створити товар</button>
</main>