<section class="product__edit">
  <h1 class="product__title">Редагування товару</h1>
  <div class="form">
    <form method="post" action="/product-edit">
      <div class="form__content">
        <h2 class="form__info">Інформація про товар</h2>
        <div class="form__tech">
          <div class="form__field--name">
            <label for="name" class="form__label">Назва товару: </label>
            <input type="name" name="name" class="form__input" placeholder="{{product.name}}" required>
          </div>
          <div class="form__field--price">
            <label for="price" class="form__label">Ціна: </label>
            <input type="price" name="price" class="form__input" placeholder="{{product.price}}" required>
          </div>
          <div class="form__field--id">
            <label for="id" class="form__label">ID:</label>
            <input type="id" name="id" class="form__input" value="{{product.id}}" readonly>
          </div>
        </div>
        <div class="form__description">
          <div class="form__field--description">
            <label for="description" class="form__label">Короткий опис до товару</label>
            <input type="description" name="description" class="form__input" placeholder="{{product.description}}" required>
            <p class="form__additional-info">Відображається у картці товару</p>
          </div>
        </div>
        <div class="form__buttons">
          <button class="form__button--update">Зберегти оновлення</button>
           <a class="form__button--delete" href="/product-delete?id={{product.id}}">Видалити товар</a>
        </div>
        </div>
      </div>
    </form>
  </div>
</section>